if((localStorage.getItem('global') || '') == '') {
	localStorage.removeItem('global')
}

if(data.token) {
	global=Object.assign({},global,(data || {}))
	localStorage.setItem('global', JSON.stringify(global || {}))

	let q = getAllUrlParams()
	console.log(`q:`,q)
	if(q.ret){
